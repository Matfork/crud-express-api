{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": false,
      "preserveConstEnums": true,
      "outDir": "built",
      "sourceMap": false    
   },
   "include": [
       "app/**/*"
   ],
   "exclude": [
      "node_modules",
      "!node_modules/@types"
   ],
   "typeRoots": [
      "../node_modules/@types"
    ]
}
